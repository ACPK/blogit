<%= blog_tag :footer do %>
  <%= blog_tag :span, t(:written_by, scope: 'blogit.posts', 
    author: post.blogger_display_name) , class: "blog_post_footer-blogger" %>
  <%= time_tag(post.created_at, pubdate: true, 
    class: "blog_post_footer-published_at" ,format: blogit_conf.datetime_format) %>
<% end %>
